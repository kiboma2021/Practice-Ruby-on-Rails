    <%= link_to "Edit Article", edit_article_path(@article) %> <br>
    <%= link_to "Destroy", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    }
    
    %>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

